@model CarLocadora.Modelo.Models.LocacoesModel


<div class="row">

    <div class="col-md-3">
        <div class="form-group">
            <label asp-for="ClienteCPF" class="control-label"></label>
            <select asp-for="ClienteCPF" asp-items="ViewBag.CarregarLocacao" class="form-control text-uppercase">
            </select>
        </div>
    </div>



    <div class="col-md-3">
        <div class="form-group">
            <label asp-for="FormaPagamentoId" class="control-label"></label>
            <select asp-for="FormaPagamentoId" asp-items="ViewBag.CarregarFormaPagamento" class="form-control text-uppercase">
            </select>
        </div>
    </div>



    <div class="col-md-3">
        <div class="form-group">
            <label asp-for="CategoriaId" class="control-label"></label>
            <select asp-for="CategoriaId" asp-items="ViewBag.CarregarCategoria" class="form-control text-uppercase">
            </select>
        </div>
    </div>



    <div class="col-md-3">
        <div class="form-group">
            <label asp-for="VeiculoPlaca" class="control-label"></label>
            <select asp-for="VeiculoPlaca" asp-items="ViewBag.CarregarVeiculoPlaca" class="form-control text-uppercase">
            </select>
        </div>
    </div>
</div>

<div class="row ">
    <div class="col-md-3">
        <div class="form-group">
            <label asp-for="DataHoraReserva" class="control-label"></label>
            <input asp-for="DataHoraReserva" class="form-control" />
            <span asp-validation-for="DataHoraReserva" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label asp-for="DataHoraRetiradaPrevista" class="control-label"></label>
            <input asp-for="DataHoraRetiradaPrevista" class="form-control" />
            <span asp-validation-for="DataHoraRetiradaPrevista" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label asp-for="DataHoraDevolucaoPrevista" class="control-label"></label>
            <input asp-for="DataHoraDevolucaoPrevista" class="form-control" />
            <span asp-validation-for="DataHoraDevolucaoPrevista" class="text-danger"></span>
        </div>
    </div>

</div>
